<%- include('../partials/header.ejs')%>
<section id="recipe">
    <div class="container-fluid">
      <%if(user == connection.hostName){%>
      <h2 class = "title"><%=connection.name%></h2>
      <hr>
      <div class="col-lg-12 form-btn">
        <form>
          <button type = "submit" formmethod = "GET" formaction = "/connection/<%=connection.id%>/edit">Edit</button>
          <button type = "submit" formmethod = "POST" formaction = "/connection/<%=connection.id%>?_method=DELETE">Delete</button>
        </form>
      </div>
      <%}else if (user && user!= connection.hostName){%>
        <h2 class = "title"><%=connection.name%></h2>
        <hr>
        <div class="col-lg-12 form-btn">
            <h5><%=rsvps%> people are going</h5>

          <h5>Are you going to attend? RSVP now</h5>
          <form>
            <button class ="btn btn-success" type = "submit" formmethod = "POST" formaction = "/connection/<%=connection.id%>/rsvp" name="rsvp" value ="YES">Yes</button>
            <button class = "btn btn-danger" type = "submit" formmethod = "POST" formaction = "/connection/<%=connection.id%>/rsvp" name="rsvp" value ="NO">No</button>
            <button class ="btn btn-primary" type = "submit" formmethod = "POST" formaction = "/connection/<%=connection.id%>/rsvp" name="rsvp" value ="MAYBE">MAYBE</button>
          </form>
        </div>
      <%}%>
      
      <div class="row">
        <div id="image-json1" class="col-lg-6 content">
          <h4>Host: <%=connection.hostname%></h4>
          <p><%=connection.details%></p>
        </div>
        <div id="context-json1" class="col-lg-6">
          <img src="<%=connection.image%>" width="250" alt="PHO">
        </div>

      </div>

    </div>
  </section>
  <%- include('../partials/footer.ejs')%>
